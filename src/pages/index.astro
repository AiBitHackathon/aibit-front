---
import Layout from '../layouts/Layout.astro';

const FITBIT_CLIENT_ID = import.meta.env.PUBLIC_FITBIT_CLIENT_ID;
const REDIRECT_URI = 'https://localhost:8888/callback';
const SCOPE = 'activity profile sleep';

// Generate random state for CSRF protection
const state = Math.random().toString(36).substring(2);

const authUrl = `https://www.fitbit.com/oauth2/authorize?response_type=code&client_id=${FITBIT_CLIENT_ID}&redirect_uri=${encodeURIComponent(REDIRECT_URI)}&scope=${encodeURIComponent(SCOPE)}&state=${state}`;
---

<Layout title="Venice - AI Fitness Assistant">
  <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-[#00B0B9] to-[#008C94]">
    <div class="bg-white p-8 rounded-lg shadow-xl max-w-md w-full mx-4">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Venice</h1>
        <p class="text-gray-600">Your AI Fitness Assistant</p>
      </div>

      <div id="error" class="hidden mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <strong class="font-bold">Error:</strong>
        <span class="block sm:inline" id="errorMessage"></span>
      </div>

      <div class="space-y-4">
        <button
          id="loginButton"
          class="w-full bg-[#00B0B9] text-white px-6 py-3 rounded-lg hover:bg-[#008C94] transition-colors flex items-center justify-center space-x-2"
          data-auth-url={authUrl}
          data-state={state}
        >
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.9,17.39C17.64,16.59 16.89,16 16,16H15V13C15,12.45 14.55,12 14,12H8V10H10C10.55,10 11,9.55 11,9V7H13C14.1,7 15,6.1 15,5V4.59C17.93,5.77 20,8.64 20,12C20,14.08 19.2,15.97 17.9,17.39M11,19.93C7.05,19.44 4,16.08 4,12C4,11.38 4.08,10.78 4.21,10.21L9,15V16C9,17.1 9.9,18 11,18M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2Z" />
          </svg>
          <span>Connect with Fitbit</span>
        </button>
      </div>
    </div>
  </main>
</Layout>

<script>
const loginButton = document.getElementById('loginButton');
if (loginButton) {
  // Store state in sessionStorage for verification
  const state = loginButton.dataset.state;
  sessionStorage.setItem('oauth_state', state);

  // Clear any existing tokens
  localStorage.removeItem('fitbit_tokens');

  // Set up login button click handler
  loginButton.addEventListener('click', () => {
    const authUrl = loginButton.dataset.authUrl;
    if (authUrl) {
      window.location.href = authUrl;
    }
  });
}

// Show error if present in URL
const urlParams = new URLSearchParams(window.location.search);
const error = urlParams.get('error');
if (error) {
  const errorDiv = document.getElementById('error');
  const errorMessage = document.getElementById('errorMessage');
  if (errorDiv && errorMessage) {
    errorMessage.textContent = decodeURIComponent(error);
    errorDiv.classList.remove('hidden');
  }
}
</script>
